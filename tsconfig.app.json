{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "extensions": {
      "**/*.ts": "TS"
    },
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    // In imports @ will be replaced with ./src
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"]
    }
  }
}
